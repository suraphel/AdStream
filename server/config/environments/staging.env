# Staging Environment Configuration
NODE_ENV=staging
PORT=5000

# Database
DATABASE_URL=postgresql://username:password@staging-db:5432/ethiomarket_staging

# Authentication
SESSION_SECRET=staging-session-secret-replace-with-strong-secret

# Feature Toggles - Staging Environment (Test production features)
FEATURE_PAYMENTS=true
FEATURE_CHAT=true
FEATURE_MAP_SEARCH=true
FEATURE_IMAGE_UPLOAD=true
FEATURE_FAVORITES=true
FEATURE_ADMIN_PANEL=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true

# Localization Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,am
ENABLE_RTL_SUPPORT=true
LANGUAGE_DETECTION=browser

# Image Storage
IMAGE_STORAGE_TYPE=azure
IMAGE_MAX_SIZE_MB=10
IMAGE_MAX_COUNT=10

# Payment Configuration (Staging Telebirr)
TELEBIRR_API_URL=https://staging-api.telebirr.com
TELEBIRR_APP_ID=staging-app-id
TELEBIRR_APP_KEY=staging-app-key
TELEBIRR_PUBLIC_KEY=staging-public-key
TELEBIRR_NOTIFY_URL=https://staging.ethiomarket.com/api/payments/telebirr/notify

# Map Services
MAP_PROVIDER=google
GOOGLE_MAPS_API_KEY=staging-google-maps-key
MAPBOX_ACCESS_TOKEN=staging-mapbox-token

# Chat Configuration
CHAT_MAX_MESSAGE_LENGTH=1000
CHAT_FILE_UPLOAD=true
CHAT_MODERATION=true

# Monitoring and Logging
LOG_LEVEL=info
METRICS_ENABLED=true
ERROR_TRACKING_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Email Configuration
EMAIL_PROVIDER=sendgrid
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=staging-sendgrid-api-key

# Security Settings
BCRYPT_ROUNDS=12
JWT_EXPIRY=7d
CORS_ORIGINS=https://staging.ethiomarket.com

# Business Rules
LISTING_EXPIRY_DAYS=30
MAX_LISTINGS_PER_USER=50
FEATURED_LISTING_DURATION_DAYS=7
MIN_SEARCH_QUERY_LENGTH=2