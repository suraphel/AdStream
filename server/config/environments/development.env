# Development Environment Configuration
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/ethiomarket_dev

# Authentication
SESSION_SECRET=dev-session-secret-change-in-production

# Feature Toggles - Development Environment
FEATURE_PAYMENTS=false
FEATURE_CHAT=true
FEATURE_MAP_SEARCH=true
FEATURE_IMAGE_UPLOAD=true
FEATURE_FAVORITES=true
FEATURE_ADMIN_PANEL=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true

# Localization Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,am
ENABLE_RTL_SUPPORT=true
LANGUAGE_DETECTION=browser

# Image Storage
IMAGE_STORAGE_TYPE=local
IMAGE_MAX_SIZE_MB=10
IMAGE_MAX_COUNT=10

# Payment Configuration (Mock for development)
TELEBIRR_API_URL=http://localhost:3001/mock-telebirr
TELEBIRR_APP_ID=dev-app-id
TELEBIRR_APP_KEY=dev-app-key
TELEBIRR_PUBLIC_KEY=dev-public-key
TELEBIRR_NOTIFY_URL=http://localhost:5000/api/payments/telebirr/notify

# Map Services (Development - Use free tiers)
MAP_PROVIDER=osm
# GOOGLE_MAPS_API_KEY=your-dev-google-maps-key
# MAPBOX_ACCESS_TOKEN=your-dev-mapbox-token

# Chat Configuration
CHAT_MAX_MESSAGE_LENGTH=1000
CHAT_FILE_UPLOAD=true
CHAT_MODERATION=false

# Monitoring and Logging
LOG_LEVEL=debug
METRICS_ENABLED=true
ERROR_TRACKING_ENABLED=true

# Rate Limiting (Relaxed for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration (Development)
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# Security Settings
BCRYPT_ROUNDS=4
JWT_EXPIRY=24h
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Business Rules (Relaxed for testing)
LISTING_EXPIRY_DAYS=90
MAX_LISTINGS_PER_USER=100
FEATURED_LISTING_DURATION_DAYS=30
MIN_SEARCH_QUERY_LENGTH=1