# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database
DATABASE_URL=postgresql://prod_user:secure_password@prod-db:5432/ethiomarket_prod

# Authentication
SESSION_SECRET=production-session-secret-very-strong-secret

# Feature Toggles - Production Environment
FEATURE_PAYMENTS=true
FEATURE_CHAT=true
FEATURE_MAP_SEARCH=true
FEATURE_IMAGE_UPLOAD=true
FEATURE_FAVORITES=true
FEATURE_ADMIN_PANEL=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true

# Localization Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,am
ENABLE_RTL_SUPPORT=true
LANGUAGE_DETECTION=browser

# Image Storage
IMAGE_STORAGE_TYPE=aws
IMAGE_MAX_SIZE_MB=5
IMAGE_MAX_COUNT=8

# Payment Configuration (Production Telebirr)
TELEBIRR_API_URL=https://api.telebirr.com
TELEBIRR_APP_ID=production-app-id
TELEBIRR_APP_KEY=production-app-key
TELEBIRR_PUBLIC_KEY=production-public-key
TELEBIRR_NOTIFY_URL=https://ethiomarket.com/api/payments/telebirr/notify

# Map Services
MAP_PROVIDER=google
GOOGLE_MAPS_API_KEY=production-google-maps-key
MAPBOX_ACCESS_TOKEN=production-mapbox-token

# Chat Configuration
CHAT_MAX_MESSAGE_LENGTH=500
CHAT_FILE_UPLOAD=false
CHAT_MODERATION=true

# Monitoring and Logging
LOG_LEVEL=warn
METRICS_ENABLED=true
ERROR_TRACKING_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
EMAIL_PROVIDER=ses
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=production-smtp-user
SMTP_PASS=production-smtp-password

# Security Settings
BCRYPT_ROUNDS=14
JWT_EXPIRY=7d
CORS_ORIGINS=https://ethiomarket.com,https://www.ethiomarket.com

# Business Rules
LISTING_EXPIRY_DAYS=30
MAX_LISTINGS_PER_USER=20
FEATURED_LISTING_DURATION_DAYS=7
MIN_SEARCH_QUERY_LENGTH=3