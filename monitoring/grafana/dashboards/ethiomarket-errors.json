{
  "dashboard": {
    "id": null,
    "title": "EthioMarket - Error Tracking (ኢትዮማርኬት - የስህተት ክትትል)",
    "tags": ["ethiomarket", "errors", "monitoring"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Total Errors | ጠቅላላ ስህተቶች",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(ethiomarket_errors_total[5m]))",
            "legendFormat": "Errors/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.1 },
                { "color": "red", "value": 1 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Critical Errors | ወሳኝ ስህተቶች",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(ethiomarket_errors_total{severity=\"critical\"}[5m]))",
            "legendFormat": "Critical Errors/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "red", "value": 0.01 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "title": "Frontend Errors | የመጀመሪያ ገጽ ስህተቶች",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(ethiomarket_errors_total{type=\"frontend\"}[5m]))",
            "legendFormat": "Frontend Errors/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.05 },
                { "color": "red", "value": 0.5 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 0 }
      },
      {
        "id": 4,
        "title": "Backend Errors | የጀርባ ገጽ ስህተቶች",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(ethiomarket_errors_total{type=\"backend\"}[5m]))",
            "legendFormat": "Backend Errors/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.05 },
                { "color": "red", "value": 0.5 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 }
      },
      {
        "id": 5,
        "title": "Errors by Severity | በደረጃ የተከፋፈሉ ስህተቶች",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ethiomarket_errors_total[5m])",
            "legendFormat": "{{severity}} severity"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 6,
        "title": "Errors by Type | በአይነት የተከፋፈሉ ስህተቶች",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ethiomarket_errors_total[5m])",
            "legendFormat": "{{type}} errors"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 7,
        "title": "HTTP Error Codes | HTTP የስህተት ኮዶች",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ethiomarket_http_requests_total{status_code=~\"4..|5..\"}[5m])",
            "legendFormat": "{{status_code}} errors"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 8,
        "title": "Error Rate by Endpoint | በመዳሪያ ነጥብ የስህተት መጠን",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, rate(ethiomarket_http_requests_total{status_code=~\"4..|5..\"}[1h]))",
            "legendFormat": "{{route}} - {{method}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
      },
      {
        "id": 9,
        "title": "Recent Error Events | የቅርብ ጊዜ የስህተት ክስተቶች",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"ethiomarket-api\"} |= \"ERROR\"",
            "legendFormat": "Error Logs"
          }
        ],
        "gridPos": { "h": 10, "w": 24, "x": 0, "y": 24 }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "severity",
          "type": "custom",
          "options": [
            { "text": "All", "value": ".*", "selected": true },
            { "text": "Critical", "value": "critical", "selected": false },
            { "text": "High", "value": "high", "selected": false },
            { "text": "Medium", "value": "medium", "selected": false },
            { "text": "Low", "value": "low", "selected": false }
          ]
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Critical Errors",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(ethiomarket_errors_total{severity=\"critical\"}[1m]) > 0",
          "iconColor": "red",
          "titleFormat": "Critical Error Detected"
        }
      ]
    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 1,
    "links": [],
    "liveNow": false,
    "panels": [],
    "schemaVersion": 27,
    "style": "dark",
    "version": 1,
    "weekStart": ""
  }
}